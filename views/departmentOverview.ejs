<%- include('./navbar') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/style.css">
<div class="container mt-5">
  <h2 class="text-center mb-4">🏢 Department Overview</h2>

  <form action="/dashboard/staff/department" method="POST" class="card p-4 shadow-sm">
    <div class="mb-3">
      <label class="form-label">Department Name</label>
      <input type="text" name="department" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Current Staff Count</label>
      <input type="number" name="staffCount" class="form-control">
    </div>
    <div class="mb-3">
      <label class="form-label">Notes</label>
      <textarea name="notes" class="form-control" rows="2"></textarea>
    </div>
    <button type="submit" class="btn btn-warning">Update Overview</button>
  </form>
</div>
<%- include('./footer') %>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get("success") === "department") {
    alert("✅ Department overview updated successfully!");
  }
</script>

<%- include('./footer') %>