<%- include('./navbar') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/style.css">


<div class="container mt-5 mb-5">
  <h2 class="text-center text-danger mb-4">🏥 Discharge Patient</h2>

  <form action="/dashboard/discharge" method="POST" class="card shadow p-4 mx-auto" style="max-width: 600px;">
    
    <div class="mb-3">
      <label class="form-label">Patient Name</label>
      <input type="text" name="patientName" class="form-control" placeholder="e.g. John Doe" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Patient ID / Registration No.</label>
      <input type="text" name="patientId" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Discharge Date</label>
      <input type="date" name="dischargeDate" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Discharge Summary</label>
      <textarea name="summary" class="form-control" rows="4" placeholder="Enter any important discharge notes here..." required></textarea>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-danger px-5">Submit Discharge</button>
    </div>
  </form>
</div>

